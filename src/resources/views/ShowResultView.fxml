<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bulumutka.polyconstr.controllers.ShowResultController"
            style="-fx-background-color: #fffff6"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="15">
        <Label text="Formulas" style="-fx-font-size: 18"/>
        <TextField editable="false" fx:id="formulasField" style="-fx-font-size: 18"/>

        <HBox spacing="10">
            <Label text="Count polynomial in point:" style="-fx-font-size: 18"/>
            <TextField style="-fx-font-size: 18"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Result is:" style="-fx-font-size: 18"/>
            <TextField editable="false" style="-fx-font-size: 18"/>
            <Button text="Calculate" style="-fx-font-size: 16" />
        </HBox>
    </VBox>
</AnchorPane>
